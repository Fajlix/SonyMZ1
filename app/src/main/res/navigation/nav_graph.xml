<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.sonymz1.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_homePageFragment"
            app:destination="@id/homePageFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_challengePageFragment"
            app:destination="@id/challengePageFragment" />
    </fragment>
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.sonymz1.homePageFragment"
        android:label="homePageFragment" >
        <action
            android:id="@+id/action_homePageFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/challengePageFragment"
        android:name="com.example.sonymz1.ChallengePageFragment"
        android:label="fragment_challenge_page"
        tools:layout="@layout/fragment_challenge_page" />
</navigation>